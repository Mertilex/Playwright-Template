{
  "name": "playwright-automation-template",
  "version": "1.0.0",
  "description": "Automation Boilerplate with playwright and typescript",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix && npx prettier . --write",
    "test": "npx playwright test --project=chromium",
    "test-ui": "npx playwright test --ui",
    "record": "npx playwright codegen",
    "test-all": "npx playwright test",
    "check": "npx eslint .",
    "prettier": "npx prettier . --check",
    "allure": "npm run allureTest; npm run allureGenerate; npm run allureReport",
    "allureTest": "ALLURE_RESULTS_DIR=reports/allure/results npx playwright test --reporter=line,allure-playwright",
    "allureGenerate": "allure generate reports/allure/results -o reports/allure/report --clean",
    "allureReport": "allure open reports/allure/report"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "QA",
    "template",
    "Playwright",
    "TypeScript",
    "automation",
    "E2E"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "dotenv": "^16.3.1",
    "playwright": "^1.38.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@playwright/test": "^1.38.1",
    "@tsconfig/node-lts": "^18.12.5",
    "@types/node": "^20.8.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "allure-playwright": "^2.9.2",
    "eslint": "^8.51.0",
    "prettier": "3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
